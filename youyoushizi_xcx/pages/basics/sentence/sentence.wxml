  <view slot="backText">返回</view>
  <view slot="content">例句详细页</view>
</cu-custom>


  <view class="bg-white padding-sm margin-top  ">
    <view class=" margin-left-xs margin-right-xs" >
      <view class="text-center text-xl text-black text-bold"> {{sentence_info.program.title}}</view>
      <view class="text-center margin-top-xs"> {{sentence_info.program.author}}  {{sentence_info.program.translator}}</view>
       
    </view>
  
  </view>




