<scroll-view scroll-y class="scrollPage">

  <view class="cu-bar bg-white solid-bottom">
    <view class="action">
      <text class="cuIcon-title text-orange "></text> 我的任务
    </view>
    <view class="action">
      <!-- <button class="cu-btn bg-green shadow" >新增</button> -->
    </view>
  </view>

  <view class="cu-list grid col-{{gridCol}} {{gridBorder?'':'no-border'}}">
    <view class="cu-item" wx:for="{{iconList2}}" wx:key wx:if="{{index<gridCol*2}}">
      <view class="cuIcon-{{item.icon}} text-{{item.color}}">
        <view class="cu-tag badge" wx:if="{{item.badge!=0}}">
          <block wx:if="{{item.badge!=1}}">{{item.badge>99?"99+":item.badge}}</block>
        </view>
      </view>
      <text>{{item.name}}</text>
    </view>
  </view>

  <view class="cu-bar bg-white solid-bottom  ">
    <view class="action">
      <text class="cuIcon-title text-orange "></text> 教材
    </view>
    <navigator  class="align-center" open-type="navigate" hover-class='none' url="/pages/basics/jiaocai/jiaocai">
    <view class="action">
      <button class="cu-btn bg-green shadow" >更多</button>
    </view>
     </navigator>
  </view>

 <view class="cu-list grid col-3">
    <view class="cu-item  justify-center align-center" wx:for="{{jiaocaiList}}" wx:key wx:if="{{index<3}}">
     <navigator  class="align-center" open-type="navigate" hover-class='none' url="/pages/basics/jiaocai_lession/jiaocai_lession?ebookid={{item.id}}">
      <cover-image src='{{item.thumb}}' class='list_image'>
      </cover-image>
    
      <view class="text-sm">
        <text class="text-grey">{{item.title}}</text>
      </view>

      </navigator>
    </view>
  </view>

  <view class="cu-bar bg-white solid-bottom ">
    <view class="action">
      <text class="cuIcon-title text-orange "></text> 课外读物
    </view>
    <navigator  class="align-center" open-type="navigate" hover-class='none' url="/pages/basics/duwu/duwu">
    <view class="action">
      <button class="cu-btn bg-green shadow" >更多</button>
    </view>
     </navigator>
  </view>

 <view class="cu-list grid col-3">
    <view class="cu-item  justify-center align-center" wx:for="{{kewaiduwuList}}" wx:key wx:if="{{index<3*2}}">
     <navigator  class="align-center" open-type="navigate" hover-class='none' url="/pages/basics/detailed/detailed?ebookid={{item.id}}">
       <cover-image src='{{item.thumb_zm}}' class='list_image'>
      </cover-image>
      <view class="text-sm">
        <text class="text-grey text-left">{{item.title}}</text>
      </view>
 
      </navigator>
    </view>
  </view>




  <view class='cu-tabbar-height'></view>
</scroll-view>