<cu-custom bgColor="bg-orange" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">例句</view>
</cu-custom>




<view class="cu-bar search bg-white">
  <view class="search-form round">
    <text class="cuIcon-search"></text>
    <input type="text" placeholder="关键词" confirm-type="search" bindinput="bindKeyInput" value='{{keywords}}' bindconfirm="search_keyword"></input>
  </view>

</view>



  <view class="cu-list menu ">


   
      <block wx:for="{{sentence_list}}" wx:key>
        <view class="margin-top">
         
            <view data-programid="{{item.id}}" bindtap="gotodeteil" class="padding-sm bg-white flex flex-wrap justify-center align-center">
             
              <view class="" style="flex-basis: 99%;">
                <view class="text-left text-xl">
                  <text class="text-black text-bold">{{item.program.title}}</text>
                </view>
                <view class="text-left">
                  <text class="text-lg">{{item.program.author}}</text>
                  <text class="user-motto" decode="{{true}}">&nbsp;&nbsp;&nbsp;</text>
                  <text class="text-lg" wx:if="{{item.program.translator!=''}}">译者：{{item.program.translator}}</text><text class="user-motto" decode="{{true}}">&nbsp;&nbsp;&nbsp;</text><text class="text-left text-df">{{item.program.linfo_text}}</text>
                </view>
 
                <view class="text-left padding-right text-grey text-df" style="text-overflow: ellipsis;height:90rpx;overflow: hidden;">
                  {{item.lword}}
                </view>

              </view>

            </view>
        </view>
      </block>

  </view>



<view class="cu-load bg-orange {{!isLoad?'loading':'over'}}"></view>


<view class='cu-load load-modal' wx:if="{{loadModal}}">
  <!-- <view class='cuIcon-emojifill text-orange'></view> -->
  <image src='/images/logo.png' class='png' mode='aspectFit'></image>
  <view class='gray-text'>加载中...</view>
</view>