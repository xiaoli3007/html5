<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">教材</view>
</cu-custom>

  <view class="bg-white">

<wux-white-space size="default" />
<block wx:for="{{jiaocaiList}}" wx:for-index="mindex" wx:key>

  <wux-row>
    <wux-col span="10" offset="1">
      <view class="text-left text-xl">
        <text class="text-grey ">{{tabNav[mindex]}}</text>
      </view>
    </wux-col>
  </wux-row>
 <wux-white-space size="default" />

  <wux-row>
    <wux-col span="10" offset="1">
      <view class="text-left text-xl">
        <view class="cu-list grid col-2 bradius   no-border">
          <view class="cu-item  justify-center align-center" wx:for="{{item.items}}" wx:key>
            <navigator class="align-center" open-type="navigate" hover-class='none' url="/pages/basics/jiaocai_lession/jiaocai_lession?ebookid={{item.id}}">
              <image src='{{item.thumb}}' style="width:150rpx;" mode="widthFix">
              </image>
              <text>{{item.title}}</text>
            </navigator>
          </view>
        </view>
      </view>
    </wux-col>
  </wux-row>
   <wux-white-space size="default" />
</block>

