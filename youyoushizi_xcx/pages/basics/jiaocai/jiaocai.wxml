  <cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
    <view slot="backText">返回</view>
    <view slot="content">教材</view>
  </cu-custom>

<scroll-view scroll-x class="bg-white nav">
  <view class="flex text-center">
    <view class="cu-item {{index==TabCur?'text-blue cur':''}}" wx:for="{{tabNav}}" wx:key bindtap='tabSelect' data-id="{{index}}">
      {{tabNav[index]}}
    </view>
  </view>
</scroll-view>

<block wx:if="{{TabCur==mindex}}" wx:for="{{tabNav}}" wx:for-index="mindex" wx:key>
  <view class="cu-bar bg-white solid-bottom margin-top">
    <view class="action">
      <text class="cuIcon-title text-orange ">语文</text> 
    </view>
    <view class="action">
      <!-- <button class="cu-btn bg-green shadow" >新增</button> -->
    </view>
  </view>

  <view class="cu-list grid col-3">
    <view class="cu-item  justify-center align-center" wx:for="{{jiaocaiList[TabCur].items}}" wx:key >
     <navigator  class="align-center" open-type="navigate" hover-class='none' url="/pages/basics/jiaocai_lession/jiaocai_lession?ebookid={{item.id}}">
      <!-- <cover-image src='/images/IMG_1574.jpg' class='list_image'>
      </cover-image> -->
      <!-- <cover-image src='{{item.thumb}}' class='list_image'>
      </cover-image> -->

       <image src='{{item.thumb}}' class='list_image' mode="widthFix">
      </image>
      <text>{{item.title}}</text>
      </navigator>
    </view>
  </view>

</block>


  <view class='cu-load load-modal' wx:if="{{loadModal}}">
  <!-- <view class='cuIcon-emojifill text-orange'></view> -->
  <image src='/images/logo.png' class='png' mode='aspectFit'></image>
  <view class='gray-text'>加载中...</view>
</view>


