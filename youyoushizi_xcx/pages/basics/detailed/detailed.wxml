<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">读物详细页</view>
</cu-custom>


<view class="cu-bar bg-blue  solid-bottom cu-bar-title" id='top_main_head_title'>
  <view class="action align-center text-center">
    <!-- <text class="cuIcon-title text-white "></text>-->
    {{program.title}}
  </view>
</view>


<view class="bg-grey padding-sm margin-xs radius flex   align-start">
  <view class="bg-grey  margin-xs radius">
    <!-- <cover-image src='{{program.thumb_xcx}}' style='width:100rpx;'></cover-image> -->

    <image src='{{program.thumb_xcx}}' style="width:200rpx;" mode="widthFix"></image>
  </view>
  <view class="bg-grey  margin-xs radius">
    <view class="text-left "> 作者：{{program.author}}</view>
    <view class="text-left ">主题：{{program.subject}}</view>
    <view class="text-left "> 简介：{{program.description}}</view>
  </view>
</view>

<!-- <view class="cu-bar bg-blue margin-top solid-bottom">
  <view class="action">
    <text class="cuIcon-title text-white"></text> 字集
  </view>
</view> -->


<scroll-view scroll-x class="bg-cyan nav text-center">
  <view class="cu-item {{index==TabCur?'text-yellow cur':''}}" wx:for="{{datalist}}" wx:key bindtap="tabSelect" data-id="{{index}}">
    {{item.obj.name}}
  </view>
</scroll-view>

<block wx:for="{{datalist}}" wx:for-index="mindex" wx:key>

  <scroll-view wx:if="{{TabCur==mindex}}" scroll-x class="bg-white nav" scroll-with-animation scroll-left="{{scrollLefts}}">

    <block wx:for="{{item.wcell_list}}" wx:for-index="mindex2" wx:key>
      <view class="cu-item {{mindex2==TabCursub?'text-green cur':''}}" bindtap="tabSelect2" data-id="{{mindex2}}">
        {{item.name}} 
      </view>
    </block>
  </scroll-view>
</block>


<block wx:key wx:for='{{datalist}}' wx:for-index="mindex">

<block wx:key wx:for='{{item.wcell_list}}' wx:for-index="mindex2">

  <block wx:if="{{TabCur==mindex && TabCursub==mindex2 }}">

  <view class="padding bg-white solid-bottom  flex">
    <view class="justify-center">
      <block wx:key wx:for='{{item.data}}' wx:for-index="mindex3">
        <view class="cu-tag radius line-black padding ">{{item.word}}</view>
      </block>
    </view>
  </view>

  <view class="flex   justify-center">
    <view class=" padding-sm margin-xs radius">
     <navigator class="content" hover-class="none" url="/pages/basics/task/task" open-type="redirect">
      <button class="cu-btn round lg bg-yellow">开始识字</button>
       </navigator>
    </view>
  </view>
</block>

</block>

</block>