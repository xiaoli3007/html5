  </button>
</view>


<view class='mecu-load meload-modal' wx:if="{{tingxie_ready}}">
  <!-- <view class='cuIcon-emojifill text-orange'></view> -->
  <view class='text-yellow text-shadow'>{{tingxie_ready_text}}</view>
</view>

<view class='cu-load load-modal' wx:if="{{loadModal}}">
  <!-- <view class='cuIcon-emojifill text-orange'></view> -->
  <image src='/images/logo.png' class='png' mode='aspectFit'></image>
  <view class='gray-text'>加载中...</view>
</view>

<wux-dialog id="wux-dialog" />


<block wx:for="{{taskdata.word1}}" wx:for-index="mindex" wx:key>
  <view class="cu-modal drawer-modal justify-start {{modalName=='DrawerModalL_word'+mindex?'show':''}}" bindtap="hideModal" wx:if="{{item.wcell_type!='25'}}">
    <view class="cu-dialog basis-lg" catchtap style="top:{{CustomBar}}px;height:calc(100vh - {{CustomBar}}px)">
      <scroll-view scroll-y style="height:calc(100vh - {{CustomBar}}px)">
        <view class="itemcontent text-left">
          <wux-white-space size="default" />

          <wux-row wx:if="{{item.word_show_detail.bihua_img!=''}}">
            <wux-col span="8" offset="2">
              <view class="text-center">
                <image src='{{item.word_show_detail.bihua_img}}' mode="widthFix" style="width:50%;">
                </image>
              </view>
            </wux-col>
          </wux-row>

          <wux-divider show-text="{{ false }}" dashed />
          <wux-row>
            <wux-col span="10" offset="1">
              <text> 笔顺：{{item.word_show_detail.bishun}}
                   </text>
            </wux-col>
          </wux-row>
          <wux-divider show-text="{{ false }}" dashed />
