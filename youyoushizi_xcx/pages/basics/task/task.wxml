            <wux-col span="5" offset="1">
              <text> 笔画：{{item.word_show_detail.bihuaw}}
                   </text>
            </wux-col>
            <wux-col span="5" offset="1">
              <text>  部首：{{item.word_show_detail.bushou}}
                   </text>
            </wux-col>

          </wux-row>
          <wux-divider show-text="{{ false }}" dashed />
          <wux-row>
            <wux-col span="10" offset="1">
              <text> 字形：{{item.word_show_detail.zixing}}
                   </text>
            </wux-col>
          </wux-row>
          <wux-divider show-text="{{ false }}" dashed />

          <block wx:for="{{item.word_show_detail.mean_list}}" wx:key>
