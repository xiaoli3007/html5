<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">听写任务</view>
</cu-custom>

<view class="cu-bar bg-white solid-bottom margin-bottom">
  <view class="action  justify-center align-center">
    <text class="cuIcon-title text-gray">{{taskdata.name}}</text>
  </view>
  <view class="action">
    <!-- <button class="cu-btn bg-green shadow" >新增</button> -->
  </view>
</view>

<wux-row>
  <wux-col span="10" offset="1">

  <view class="flex">
    <view class="cu-progress round striped">
      <view class="bg-green" style="width:{{taskloading?taskloading:'0%'}};"></view>
    </view>
    <text class="margin-left">{{current+1}}/{{taskdata.word1.length}}</text>
  </view>
  </wux-col>

</wux-row>
  <wux-white-space size="default" />

<wux-row>
  <wux-col span="1" >
      <wux-tabs defaultCurrent="tab1" direction="vertical">
            <wux-tab key="tab1" title="字"></wux-tab>
            <wux-tab key="tab2" title="词"></wux-tab>
            <wux-tab key="tab3" title="句"></wux-tab>
        </wux-tabs>
  </wux-col>
  <wux-col span="8" offset="1">

   <view class="bg-green padding radius align-center shadow-blur">
    <swiper bindchange="change" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" current="{{current}}" wx:if="{{!loadModal}}">
  <block wx:for="{{taskdata.word1}}" wx:key>
    <swiper-item>

                <swiper  vertical="{{true}}"  >
                    <swiper-item>
                      <view class="justify-center align-center  text-center">
                      <view>  <text class='task_sw text-center'>{{item.sw}}</text> </view>
                      </view>
                    </swiper-item>
                    <swiper-item>
                      <view class="flex justify-center align-center  text-center">
                       <view> <text class='task_dw text-center'>{{item.dw_xcx}}</text></view>
                      </view>
                    </swiper-item>
                    <swiper-item>
                      <view class="flex justify-center align-center">
                       <view  class=''> <text class='task_lw text-left align-center'>{{item.lw_xcx}}</text></view>
                      </view>
                    </swiper-item>
                </swiper>

      <!-- <view class="justify-center align-center task_sw_view text-center">
        <text class='task_sw text-center'>{{item.sw}}</text>
      </view> -->
    </swiper-item>
  </block>
</swiper>

</view>

  </wux-col>

   <wux-col span="1" offset="1">
        <button class="cu-btn icon bg-white">
    <text class="cuIcon-question"></text>
  </button>
    
  </wux-col>

</wux-row>

 <wux-white-space size="large" />
  <wux-white-space size="default" />
   <wux-white-space size="default" />
<wux-row >
  <wux-col span="8" offset="2">
  <view class="padding text-center">  已用时：10:20:50  </view>
  </wux-col>
</wux-row>

<wux-row>
  <wux-col span="4">
    <view class="padding text-center">   读三次 <text class="cuIcon-notification" style="font-size:30rpx;"></text></view>
  </wux-col>
  <wux-col span="4">
   <view class="padding text-center">    间隔5秒</view>
  </wux-col>
  <wux-col span="4">
   <view class="padding text-center">    隐藏
   <text class="cuIcon-attention" style="font-size:30rpx;"></text>
   <text class="cuIcon-attentionforbid" style="font-size:30rpx;"></text>
   </view>
  </wux-col>
</wux-row>


<view class=" flex flex-wrap justify-between align-center bg-white">
  <!-- <button class="cu-btn round" bindtap="prev"> </button> -->
  <view class="cuIcon-pullleft" style="font-size:80rpx;" bindtap="prev">
  </view>


  <!-- <view class="cu-tag bg-cyan">   </view> -->
  <view class="cuIcon-video" style="font-size:100rpx;">
  </view>
  <!-- <button class="cu-btn round" bindtap="next">下一个</button> -->
  <view class="cuIcon-pullright" style="font-size:80rpx;" bindtap="next">
  </view>

</view>

<view class="padding flex flex-wrap justify-between align-center bg-white">
 <button class="cu-btn round bg-gradual-red shadow" bindtap="audioPlay">
   首
    
  </button>
  <button class="cu-btn round bg-gradual-blue shadow" bindtap="audioPlay">
    字
    <view class="cuIcon-notification" style="font-size:30rpx;">
    </view>
  </button>
  <button class="cu-btn round bg-gradual-green shadow" bindtap="audioPlay">词
    <view class="cuIcon-notification" style="font-size:30rpx;">
    </view>
  </button>
  <button class="cu-btn round bg-gradual-pink shadow" bindtap="audioPlay">句
    <view class="cuIcon-notification" style="font-size:30rpx;">
    </view>
  </button>

   <button class="cu-btn round bg-gradual-orange shadow" bindtap="audioPlay">
   尾
  </button>
</view>

