    {{program.title}}
  </view>
</view> -->


<scroll-view scroll-x class=" bg-white nav text-center">
  <view class="cu-item {{index==TabCur?'text-orange cur':''}}" wx:for="{{datalist}}" wx:key bindtap="tabSelect" data-id="{{index}}">
    {{item.obj.name}}
  </view>
</scroll-view>

<block wx:for="{{datalist}}" wx:for-index="mindex" wx:key>

  <scroll-view wx:if="{{TabCur==mindex}}" scroll-x class="margin-top bg-white nav text-center" scroll-with-animation scroll-left="{{scrollLefts}}">

    <block wx:for="{{item.wcell_list}}" wx:for-index="mindex2" wx:key>
      <view class="cu-item {{mindex2==TabCursub?'text-orange cur':''}}" bindtap="tabSelect2" data-id="{{mindex2}}">
        {{item.name}} 
      </view>
    </block>
  </scroll-view> 
   <!-- <view wx:if="{{TabCur==mindex}}"  class="margin-top bg-white flex text-center" >

    <block wx:for="{{item.wcell_list}}" wx:for-index="mindex2" wx:key>
      <view class="cu-item {{mindex2==TabCursub?'text-orange cur':''}}" bindtap="tabSelect2" data-id="{{mindex2}}">
        {{item.name}} 
      </view>
    </block>
  </view> -->
</block>


<block wx:key wx:for='{{datalist}}' wx:for-index="mindex">

<block wx:key wx:for='{{item.wcell_list}}' wx:for-index="mindex2">

  <block wx:if="{{TabCur==mindex && TabCursub==mindex2 }}">


    <view class="padding-xs bg-white" style="padding-bottom:120rpx;">
     <view class="cu-list grid col-3">
      <block wx:key wx:for='{{item.data}}' wx:for-index="mindex3">
      
        <view class="line-black padding-xs">
         <view class="cu-tag radius margin-xs" data-wcell_type="{{item.wcell_type}}" data-wcellid="{{item.id}}" bindtap="showModal_word_shiyi"> 
          {{item.word}}
         </view>
        </view>
      </block>
      </view>
    </view>
  

  <view class="flex flex-direction cu-bar-sun foot">
  <button class="cu-btn bg-orange lg" data-taskid="{{item.shizi_taskid}}" data-relation_id="{{program.id}}" data-gid="{{mindex2}}" data-wcell_type="{{mindex}}" bindtap="gotodeteil_task">
  <text>开始识字</text><text wx:if="{{item.shizi_taskid!=0}}">(已添加)</text></button>
</view>




</block>

</block>

</block>


<view class="cu-modal drawer-modal justify-start {{modalName=='DrawerModalL_word'?'show':''}}" bindtap="hideModal" >
  <view class="cu-dialog basis-lg" catchtap style="top:{{CustomBar}}px;height:calc(100vh - {{CustomBar}}px)">
    <scroll-view scroll-y style="height:calc(100vh - {{CustomBar}}px)" class="bg-white">

   
    <image src="https://rmsp.youyoushizi.com/statics/yysz/loading-white.gif" mode="aspectFit" class="gif-white response" style=""  wx:if="{{isloaditem}}"></image>
 
       <my-word dataArray="{{data_item_word.word_show_detail}}" > </my-word>

     
    </scroll-view>
  </view>
</view>

<view class="cu-modal drawer-modal justify-start {{modalName=='DrawerModalC_word'?'show':''}}" bindtap="hideModal" >
  <view class="cu-dialog basis-lg" catchtap style="top:{{CustomBar}}px;height:calc(100vh - {{CustomBar}}px)">
    <scroll-view scroll-y style="height:calc(100vh - {{CustomBar}}px)">
       <image src="https://rmsp.youyoushizi.com/statics/yysz/loading-white.gif" mode="aspectFit" class="gif-white response" style=""  wx:if="{{isloaditem}}"></image>

       <my-chengyu dataArray="{{data_item_word.word_show_detail}}" > </my-chengyu>
    
    </scroll-view>
  </view>
</view>