<wxs src="../../../utils/common.wxs" module="common" />
<cu-custom bgColor="bg-orange">
  <view slot="content">优优卡片</view>
</cu-custom>

<view class="cu-load bg-orange loading" wx:if="{{isLoad}}"></view>



<wux-refresher id="wux-refresher" bind:pulling="onPulling" bind:refresh="onPullDownRefresh">
  <scroll-view scroll-y class="scrollPage" class="" style="">

    
    <view class="cu-list grid col-3" style="margin-top:0;">
      <view class="cu-item" wx:for="{{iconList}}" wx:key wx:if="{{index<gridCol*2}}">

        <navigator class="align-center" open-type="navigate" hover-class='none' url="{{item.url}}?type={{item.type}}">
      
          <view class="cu-avatar round lgme" style="background-color: #fff;background-image:url({{item.bg_image}});">

            <view class="cu-tag badge" wx:if="{{item.badge!=0}}">
              <block wx:if="{{item.badge!=1}}">{{item.badge>99?"99+":item.badge}}</block>
            </view>

          </view>
          <text>{{item.name}}</text>
        </navigator>

      </view>

    </view>

  
       <view class="cu-bar bg-white  ">
      <view class="action" bindtap="gotodetail">
        <!-- <text class="cuIcon-title text-orange "></text> -->
        我的卡片
      </view>
      <navigator class="align-center" open-type="navigate" hover-class='none' url="/pages/about/mycard/mycard">
        <view class="action">
          <!-- <button class="cu-btn bg-green shadow" >更多</button> -->
          <text class="text-orange">更多</text>
        </view>
      </navigator>
    </view>
    <view class="bg-white " style="margin-top:0;">
      <view class="cu-list grid col-3  ">
        <view class="cu-item  justify-center align-center" wx:for="{{global_card}}" wx:key wx:if="{{index<3*2}}">
          <navigator class="align-center" open-type="navigate" hover-class='none' url="/pages/basics/detailed/detailed?ebookid={{item.id}}">

            <image src='{{item.thumb_xcx}}' mode="widthFix" style="width:120rpx;">
            </image>

            <view class="text-sm">
              <text class="text-grey text-center">{{common.util_stut_string(item.name,8)}}</text>
            </view>

          </navigator>
        </view>
      </view>
    </view>

           <view class="cu-bar bg-white  ">
      <view class="action" bindtap="gotodetail">
        <!-- <text class="cuIcon-title text-orange "></text> -->
        公共卡片
      </view>
      <navigator class="align-center" open-type="navigate" hover-class='none' url="/pages/basics/globalcard/globalcard">
        <view class="action">
          <!-- <button class="cu-btn bg-green shadow" >更多</button> -->
          <text class="text-orange">更多</text>
        </view>
      </navigator> 
    </view>
    <view class="bg-white " style="margin-top:0;">
      <view class="cu-list grid col-3  ">
        <view class="cu-item  justify-center align-center" wx:for="{{global_card}}" wx:key wx:if="{{index<3*2}}">
          <navigator class="align-center" open-type="navigate" hover-class='none' url="/pages/basics/detailed/detailed?ebookid={{item.id}}">
   
            <image src='{{item.thumb_xcx}}' mode="widthFix" style="width:120rpx;">
            </image>

            <view class="text-sm">
              <text class="text-grey text-center">{{common.util_stut_string(item.name,8)}}</text>
            </view>
 
          </navigator>   
        </view>
      </view>
    </view>



 

    <view class='cu-tabbar-height'></view>
  </scroll-view>

</wux-refresher>